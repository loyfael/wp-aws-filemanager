# Database connection settings
DB_HOST=localhost
DB_PORT=3306
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=your_db_name

# AWS S3 credentials and settings
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY_ID
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_ACCESS_KEY
AWS_REGION=eu-west-3
AWS_BUCKET_NAME=your-s3-bucket-name

# WordPress upload URL prefix (used for downloading images)
WP_UPLOADS_URL_PREFIX=https://example.com/wp-content/uploads/

# Migration settings
BATCH_SIZE=50
BATCH_OFFSET=0

# Path to WordPress uploads directory on your server
LOCAL_UPLOADS_PATH=/path/to/wordpress/wp-content/uploads

# URL to your WordPress sitemap
SITEMAP_URL=https://example.com/sitemap_index.xml

# Absolute path to WordPress uploads directory
WP_UPLOADS_ABSOLUTE_PATH=/path/to/wordpress/wp-content/uploads

# WordPress database table prefix
WP_TABLE_PREFIX=wp_